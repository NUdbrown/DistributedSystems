import java.io.IOException;
import java.io.OutputStream;

public class Client {

	public static void main (String [] args){
		Client c = new Client();
		c.run();
	}

	public void run() {
		
		
	}
	
	//writing
	public void writeRacecar(Racecar car, OutputStream out) throws IOException{
		
		//send car id
		out.write(car.getId());
		//send length of make
		out.write(car.getMake().length());
		//send length of model
		out.write(car.getModel().length());
		//send chars of make
		out.write(car.getMake().getBytes());
		//send chars of model
		out.write(car.getModel().getBytes());
		//send horsepwr
		
		//send quartermile
				
		
	}
	
	public void writeDriver(Driver d, OutputStream out) throws IOException{
		//send id
		out.write(d.getId());
		//Send lengthOfName
		int lengthOfName = d.getName().length();
		out.write(lengthOfName);
		//send Name
		out.write(d.getName().getBytes());
		//send age
		out.write(d.getAge());
		//send isMale
	}
	
}
