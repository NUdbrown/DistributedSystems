
public class Serializer {

//	public byte[] serializeObject(Object object){
//		byte[] array = new byte[];
//		return null;		
//	}
	
	public byte[] serializeRequest(CrudOperations ops){
		
		byte[] array = new byte[1];
		
		if(ops == CrudOperations.ADD){
			array[0] = 0;
		}else if(ops == CrudOperations.DEL){
			array[0] = 1;
		}else if(ops == CrudOperations.UPDATE){
			array[0] = 2;
		}else if(ops == CrudOperations.GET){
			array[0] = 3;
		}
		
		return array;		
	}
	
	public CrudOperations deseralizeEnum(byte [] array){
		CrudOperations ops = null;
		if(array[0] == 0){
			ops = CrudOperations.ADD;
		}else if(array[0] == 1){
			ops = CrudOperations.DEL;
		}else if(array[0] == 2){
			ops = CrudOperations.UPDATE;
		}else if(array[0] == 3){
			ops = CrudOperations.GET;
		}
		return ops;
	}
	
}
